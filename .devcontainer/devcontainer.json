{
  "name": "Mowito Dev Container",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "isaac-sim",
  "workspaceFolder": "/workspace/ros2_ws",
  "shutdownAction": "stopCompose",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "python.pythonPath": "/usr/bin/python3"
  },
  "extensions": [
    "ms-vscode-remote.remote-containers",
    "ms-iot.vscode-ros",
    "ms-python.python",
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools"
  ],
  "forwardPorts": [8888, 5000, 8080],
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace/ros2_ws,type=bind,consistency=cached"
  ],
  "remoteUser": "root"
}
